<p id="notice"><%= notice %></p>

<h1>Listing Favorite Stores</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_stores.each do |favorite_store| %>
      <tr>
        <td><%= favorite_store.name %></td>
        <td><%= favorite_store.address %></td>
        <td><%= favorite_store.latitude %></td>
        <td><%= favorite_store.longitude %></td>
        <td><%= link_to 'Show', favorite_store %></td>
        <td><%= link_to 'Edit', edit_favorite_store_path(favorite_store) %></td>
        <td><%= link_to 'Destroy', favorite_store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

