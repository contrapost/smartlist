<head>
  <% content_for :title, 'Edit favourite list' %>
</head>

<body>

<div class="top-content">

  <div class="inner-bg">

    <div class="container">

      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text">
          <h1 class="page-header"><strong>Edit <%= @favourite_list.name %> shopping list</strong></h1>
        </div>
      </div>

      <div class="row">
        <div class="form-box">
          <div class="col-xs-12 col-sm-6 ">

            <div class="panel panel-default panel-danger">
              <div class="panel-heading">
                <h4>
                  <strong><%= @favourite_list.name %>:</strong>
                </h4>
              </div>
              <div id="wrapper">
                <table class="table table-fixed">
                  <thead>
                  <tr>
                    <th class="col-xs-4">Name</th>
                    <th class="col-xs-6">Address</th>
                    <th class="col-xs-2"></th>
                  </tr>
                  </thead>
                  <tbody>

                  <% @products_from_favourite_list.each do |product, favourite_list = @favourite_list| %>
                      <tr>
                        <td class="col-xs-4 left-al-cell"><%= product.name %></td>
                        <td class="col-xs-6 left-al-cell"><%= product.store %></td>
                        <td class="col-xs-2"><%= link_to 'delete',
                                                         {controller: :favourite_lists,
                                                          action: :delete_from_favourite_list,
                                                          id: product.id,
                                                          favourist_list_id: favourite_list.id
                                                         },
                                                         class: 'link' %></td>
                      </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>


          </div>
        </div>
        <div class="col-xs-12 col-sm-6">


          <div class="panel panel-default panel-success">
            <div class="panel-heading">
              <h4>
                <strong>Your products:</strong>
              </h4>
            </div>
            <div>
              <table class="table table-fixed">
                <thead>
                <tr>
                  <th class="col-xs-4">Name</th>
                  <th class="col-xs-6">Description</th>
                  <th class="col-xs-2"></th>
                </tr>
                </thead>
                <tbody>

                <% @all_products.each do |product, favourite_list = @favourite_list| %>
                    <tr>
                      <td class="col-xs-4 left-al-cell"><%= product.name %></td>
                      <td class="col-xs-6 left-al-cell"><%= product.description %></td>
                      <td class="col-xs-2"><%= link_to 'add',
                                                       {action: :add_to_favourite_list, controller: :favourite_lists,
                                                        id: product.id,
                                                        favourist_list_id: favourite_list.id
                                                       },
                                                       class: 'link' %></td>
                    </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>

        </div>


      </div>

    </div>

  </div>

</div>

</body>
