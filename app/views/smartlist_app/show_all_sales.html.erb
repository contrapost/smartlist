<head>
  <% content_for :title, 'Sales' %>
</head>

<body>

<div class="top-content">

  <div class="inner-bg">

    <div class="container">

      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text">
          <h1 class="page-header"><strong>ACTIVE SALES</strong></h1>
        </div>
      </div>

      <div class="row">
        <div class="form-box">

          <div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-7 col-sm-9">
                    <h4>
                      <strong>SALES</strong>
                    </h4>
                  </div>
                  <div class="col-xs-5 col-sm-3">
                    <%= link_to 'add sale', new_sale_path, class: 'btn btn-success' %>
                  </div>
                </div>
              </div>
              <table class="table table-fixed">
                <thead>
                <tr>
                  <th class="col-xs-4 col-sm-4 col-md-4 col-lg-4">Name</th>
                  <th class="col-xs-4 col-sm-4 col-md-4 col-lg-4">Expiry Date</th>
                  <th class="col-xs-4 col-sm-4 col-md-4 col-lg-4">Image URL</th>
                </tr>
                </thead>
                <tbody>
                <!--TODO: Delete show button-->
                <% @sales.each do |sale| %>
                    <tr>
                      <td class="col-xs-4 col-sm-4 col-md-4 col-lg-4 left-al-cell"><%= sale.name %></td>
                      <td class="col-xs-4 col-sm-4 col-md-4 col-lg-4 left-al-cell"><%= sale.expiry_date %></td>
                      <td class="col-xs-4 col-sm-4 col-md-4 col-lg-4 left-al-cell"><%= sale.image_url %></td>
                      </td>
                    </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>


</body>