<head>
  <% content_for :title, 'SMARTLIST REGISTRATION' %>
</head>

<body>

<div class="inner-bg">
  <div class="container">

    <div class="row">
      <div class="col-sm-8 col-sm-offset-2 text">
        <h1 class="page-header"><strong>SMARTLIST REGISTRATION</strong></h1>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-1 col-md-3"></div>
      <div class="col-xs-12 col-sm-10 col-md-6">

        <div class="form-box">
          <div class="form-top">
            <div class="form-top-left">
              <h3 class="dashboard_category_title">SIGN UP</h3>
            </div>
            <div class="form-top-right">
              <i class="fa fa-key"></i>
            </div>
          </div>
          <div class="form-bottom">
            <%= # noinspection RubyResolve
                form_for(resource, as: resource_name, url: registration_path(resource_name),
                         :html => {role: 'form', class: 'registration-form'}) do |f| %>
                <%= devise_error_messages! %>
                <div class="form-group">
                  <label class="sr-only" for="form-email">Email</label>
                  <%= f.email_field :email, type: 'text',
                                    placeholder: 'Email',
                                    class: 'form-username form-control', id: 'form-username',
                                    autofocus: true %>
                </div>
                <div class="form-group">
                  <label class="sr-only" for="form-password">Password</label>
                  <%= f.password_field :password, autocomplete: 'off',
                                       placeholder: "Password (#{@minimum_password_length} characters minimum)",
                                       class: 'form-password form-control', id: 'form-password' %>
                </div>
                <div class="form-group">
                  <label class="sr-only" for="form-password-confirmation">Password Confirmation</label>
                  <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Confirm Password',
                                       class: 'form-password form-control', id: 'form-password' %>
                </div>
                <%= f.submit 'Sign up', class: 'button btn btn-sign-in' %>
                <p></p>


                <%= link_to 'Sign in', new_session_path(resource_name), class: 'btn btn-danger' %>


            <% end %>
            <p></p>

            <%= # noinspection RubyResolve
                link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'link' %>
            <p></p>
            <%= link_to 'Store? Contact us for registration.', '#contact_us', :remote => true, 'data-toggle' => 'modal', class: 'link' %>


          </div>
        </div>


      </div>

      <div class="col-sm-1 col-md-3"></div>
    </div>

  </div>
</div>

</body>